generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String     @id @default(uuid())
  passwordHash String
  email        String         @unique
  firstName     String
  lastName     String
  role         Role
  bloodGroup   BloodGroup?
  gender       Gender?
  address      String
  createdAt    DateTime       @default(now())
  appointments Appointment[]
  Notification Notification[]
}

model DonationEvent {
  id           String     @id @default(uuid())
  title            String
  description      String?
  hospitalId      String
  eventDate        DateTime
  location         String
  bloodstockNeeded Int
  createdAt        DateTime      @default(now())
  appointments     Appointment[]
  hospital        Hospital @relation(fields: [hospitalId], references: [id])

}

model Appointment {
  id          String     @id @default(uuid())
  userId          String
  eventId         String
  appointmentDate DateTime
  createdAt       DateTime      @default(now())
  user            User          @relation(fields: [userId], references: [id])
  event           DonationEvent @relation(fields: [eventId], references: [id])

}

model Notification {
  id          String     @id @default(uuid())
  userId    String
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}
model Hospital {
  id          String     @id @default(uuid())
  name        String
  email       String  @unique
  password    String
  district    String
  sector      String
  description String
  events  DonationEvent[]

}

enum Role {
  DONOR
  ADMIN
  VOLUNTEER

}

enum BloodGroup {
  A_plus
  A_minus
  B_plus
  B_minus
  AB_plus
  AB_minus
  O_plus
  O_minus
}

enum Gender {
  MALE
  FEMALE
  OTHER
}